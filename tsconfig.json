{
   "compilerOptions": {
      "lib": [
         "es5",
         "es2015"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true
   },
   "include": [
      "./src/**/*.ts",
      "./types/**/*.ts"
   ]
}